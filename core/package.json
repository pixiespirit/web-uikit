{
  "name": "@pixiepkg/core",
  "version": "2.0.0",
  "description": "Pixie web core UI components",
  "main": "cjs.js",
  "module": "esm.js",
  "types": "types/index.d.ts",
  "repository": "https://github.com/pixiespirit/web-uikit.git",
  "license": "MIT",
  "scripts": {
    "build": "yarn rollup",
    "rollup": "rollup --config",
    "watch": "npm-watch",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'"
  },
  "watch": {
    "build": {
      "patterns": [
        "src/**/*"
      ],
      "extensions": "css, ts, tsx, module.css"
    }
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16"
  },
  "devDependencies": {
    "@svgr/cli": "^5.5.0",
    "@types/node": "^15.12.2",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-unused-imports": "^1.1.4",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-watch": "^0.11.0",
    "postcss": "^8.3.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.51.1",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.0.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "@pixiepkg/icon": "^0.0.12",
    "@types/lodash.chunk": "^4.2.6",
    "classnames": "^2.3.1",
    "lodash.chunk": "^4.2.0",
    "react-multi-ref": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run lint -- --quiet --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
